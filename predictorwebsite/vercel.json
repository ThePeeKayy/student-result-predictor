{
  "version": 2,
  "functions": {
    "api": {
      "handler": "app/api/app.app"
    }
  },
  "builds": [
    { 
      "src": "app/api/app.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.8"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api" },
    { "src": "/(.*)", "dest": "app/api/app.py" }
  ]
}
